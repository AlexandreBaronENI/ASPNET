@model BO.Samourai


<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
    </dl>

    @{
        if (Model.ArtsMartiaux != null && Model.Arme != null)
        {
            <dl class="dl-horizontal">
                <dt>
                    Potentiel
                </dt>

                <dd>
                    @(Model.Force + Model.Arme.Degats * (Model.ArtsMartiaux.Count+1) )
                </dd>
            </dl>
        }
        if (Model.Arme != null)
        {
            <h4>Arme</h4>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Arme.Nom)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Arme.Nom)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Arme.Degats)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Arme.Degats)
                </dd>
            </dl>
        }
        if (Model.ArtsMartiaux != null)
        {
            <h4>Arts Martiaux</h4>

            <dl class="dl-horizontal">
                @foreach (var artMartial in Model.ArtsMartiaux)
                {
                    <dd>
                        @artMartial.Nom
                    </dd>
                }
            </dl>
        }
    }
</div>